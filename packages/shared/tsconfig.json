{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "paths": {
      "@styles/*": ["./src/styles/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["src", "src/**/*.stories.tsx"],
  "exclude": ["**/*.stories.tsx", "**/*.mdx"]
}
