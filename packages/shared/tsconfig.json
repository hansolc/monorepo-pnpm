{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["./src/hooks/*"],
      "@styles/*": ["./src/styles/*"],
      "@components/*": ["./src/components/*"],
      "@frameworks/*": ["./src/frameworks/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx", "**/*.mdx", "src/test/*"]
}
