{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "outDir": "build",
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["./src/styles/*"],
      "@base/*": ["./src/base/*"],
      "@md3/*": ["./src/md3/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.css.ts"],
  "exclude": ["src/test/*"]
}
