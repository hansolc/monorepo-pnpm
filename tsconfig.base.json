{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo-pnpm/shared/client": ["packages/shared/src/client"],
      "@monorepo-pnpm/shared/server": ["packages/shared/src/server"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  }
}
